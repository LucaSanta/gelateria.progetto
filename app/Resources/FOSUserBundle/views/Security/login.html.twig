{% extends "FOSUserBundle::layout.html.twig" %}

    {% block stylesheets %}

    <link rel="stylesheet" href="/css/login.css" type="text/css">
    {% endblock  %}
    
         {% block body %}

  <div class="trasparente">


{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  {% if error %}
      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
  <p class="click">Login!</p>
  <p class="istruzioni">Inserisci le tue informazioni personali!</p>
  <br/>
  <br/>

  <div id="formid">
    <form action="{{ path("fos_user_security_check") }}" method="post">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

      <label for="username">Username</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
      <br/>
      <br/>

      <label for="password">Password</label>
      <input type="password" id="password" name="_password" required="required" />
      <br/>
      <br/>

      <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
      <label for="remember_me">Ricordami!</label>
      <br/>

      <input class="bottone" type="submit" id="_submit" name="_submit" value="Login" />
    </form>
  </div>

{% endblock fos_user_content %}

{% block testovariabile %}
  <p class="registrati">Non hai un account?
    <a href="{{ url('fos_user_registration_register') }}">Registrati</a>
  </p>
  <p class="passwordimenticata">Hai smarrito la tua Password?
    <a href="{{ url('fos_user_resetting_request') }}">Clicca qui</a>


  </p>
{% endblock testovariabile %} 
</div>
   {%  endblock  body  %} 
